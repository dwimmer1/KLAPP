<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hintergrundfarbe des Felds -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2" /> <!-- Hintergrundfarbe anpassen -->
            <corners android:radius="8dp" /> <!-- Abrundungseffekt anpassen -->
        </shape>
    </item>

    <!-- Rand um das Feld -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Randfarbe anpassen -->
            <corners android:radius="6dp" /> <!-- Abrundungseffekt anpassen -->
        </shape>
    </item>

</layer-list>
